extends layout

block vars
    -var title = "Home"

block content
    - var profilePic = user.picture || 'https://pixabay.com/static/uploads/photo/2013/07/13/12/07/avatar-159236_960_720.png'
    row.col-xs-4.profileRow
      img(src="#{profilePic}")
      p #{user.fullName}
      p #{user.email}
      if(!requestee)
        a.btn.btn-primary(href="/requests/#{user._id}") Add as Friend
      else
        p Friend Request
        a.btn.btn-primary(href="/requests/#{user._id}/accept") Accept
        a.btn.btn-primary(href="/requests/#{user._id}/reject") Reject
      if(user.friends)
        p Friends
        each friend in user.friends
          a #{friend}
      if(user.requests)
        p Requests
        each request in user.requests
          p #{request}
            a(href="/requests/#{request}/accept") Accept &nbsp;
            a(href="/requests/#{request}/reject") Reject
      

    